<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <object class="GtkOverlay" id="main_window_overlay">
    <property name="visible">True</property>
    <property name="halign">fill</property>
    <property name="valign">fill</property>
    <child type="overlay">
      <object class="GtkBox">
        <property name="orientation">horizontal</property>
        <property name="visible">True</property>
        <property name="halign">fill</property>
        <property name="hexpand">True</property>
        <property name="valign">start</property>
        <property name="vexpand">True</property>
        <child>
          <object class="GtkLabel">
            <property name="visible">True</property>
            <property name="label">Hack:</property>
          </object>
          <packing>
            <property name="pack_type">start</property>
          </packing>
        </child>
        <child>
          <object class="GtkSwitch" id="main_window_switch_hack_mode">
            <property name="visible">True</property>
          </object>
          <packing>
            <property name="pack_type">start</property>
          </packing>
        </child>
      </object>
    </child>
    <child type="overlay">
      <object class="GtkButtonBox">
        <property name="visible">True</property>
        <property name="halign">center</property>
        <property name="hexpand">True</property>
        <property name="valign">end</property>
        <property name="vexpand">True</property>
        <property name="layout_style">center</property>
        <child>
          <object class="GtkRadioButton" id="main_window_button_clubhouse">
            <property name="visible">True</property>
            <property name="halign">fill</property>
            <property name="hexpand">True</property>
            <property name="valign">fill</property>
            <property name="vexpand">True</property>
            <property name="draw-indicator">False</property>
            <property name="label" translatable="yes">Clubhouse</property>
          </object>
        </child>
        <child>
          <object class="GtkRadioButton" id="main_window_button_pathways">
            <property name="visible">True</property>
            <property name="halign">fill</property>
            <property name="hexpand">True</property>
            <property name="valign">fill</property>
            <property name="vexpand">True</property>
            <property name="draw-indicator">False</property>
            <property name="group">main_window_button_clubhouse</property>
            <property name="label" translatable="yes">Pathways</property>
          </object>
        </child>
        <child>
          <object class="GtkRadioButton" id="main_window_button_inventory">
            <property name="visible">True</property>
            <property name="halign">fill</property>
            <property name="hexpand">True</property>
            <property name="valign">fill</property>
            <property name="vexpand">True</property>
            <property name="draw-indicator">False</property>
            <property name="group">main_window_button_clubhouse</property>
            <property name="label" translatable="yes">Inventory</property>
          </object>
        </child>
        <style>
          <class name="clubhouse-button-box"/>
        </style>
      </object>
    </child>
    <child>
      <object class="GtkStack" id="main_window_stack">
        <property name="can_focus">False</property>
        <property name="halign">fill</property>
        <property name="transition_type">crossfade</property>
        <property name="valign">fill</property>
        <property name="visible">True</property>
      </object>
    </child>
  </object>
</interface>
