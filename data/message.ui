<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <object class="GtkOverlay" id="character_talk_box">
    <property name="visible">True</property>
    <property name="can_focus">False</property>
    <child type="overlay">
      <object class="GtkBox">
        <property name="visible">True</property>
        <property name="halign">fill</property>
        <property name="valign">end</property>
        <property name="orientation">horizontal</property>
        <property name="homogeneous">False</property>
        <property name="spacing">0</property>

        <child>
          <object class="GtkBox">
            <property name="visible">True</property>
            <property name="halign">fill</property>
            <property name="valign">center</property>
            <property name="orientation">vertical</property>

            <child>
              <object class="GtkLabel" id="message_label">
                <property name="visible">True</property>
                <property name="halign">fill</property>
                <property name="valign">center</property>
                <property name="xalign">0</property>
                <property name="yalign">0</property>
                <property name="lines">5</property>
                <property name="wrap">True</property>
                <property name="wrap-mode">word</property>
                <property name="ellipsize">end</property>
                <style>
                  <class name="clubhouse-message-label"/>
                </style>
              </object>
            </child>

            <child>
              <object class="GtkBox" id="message_list_button_box">
                <property name="visible">True</property>
                <property name="halign">center</property>
                <property name="valign">end</property>
                <property name="orientation">vertical</property>
                <style>
                  <class name="clubhouse-message-list-button-box"/>
                </style>
              </object>
            </child>

            <property name="orientation">vertical</property>
          </object>
        </child>

        <child>
          <object class="GtkButton" id="character_message_close_button">
            <property name="visible">True</property>
            <property name="halign">end</property>
            <property name="valign">start</property>
            <child>
              <object class="GtkImage">
                <property name="visible">True</property>
                <property name="pixel-size">16</property>
                <property name="icon_name">window-close-symbolic</property>
              </object>
            </child>
            <style>
              <class name="character-message-side-button"/>
            </style>
          </object>
        </child>
        <style>
          <class name="clubhouse-message-box"/>
        </style>
      </object>
    </child>
    <child type="overlay">
      <object class="GtkImage" id="character_image">
        <property name="visible">True</property>
        <property name="halign">end</property>
        <property name="valign">end</property>
        <style>
          <class name="clubhouse-message-character"/>
        </style>
      </object>
    </child>
    <child type="overlay">
      <object class="GtkBox" id="message_button_box">
        <property name="visible">True</property>
        <property name="halign">start</property>
        <property name="valign">end</property>
        <property name="orientation">horizontal</property>
        <style>
          <class name="clubhouse-message-button-box"/>
        </style>
      </object>
    </child>
  </object>
</interface>
