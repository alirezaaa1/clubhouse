<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <object class="GtkBox" id="episode_row_box">
    <property name="visible">True</property>
    <property name="halign">fill</property>
    <property name="orientation">vertical</property>
    <child>
      <object class="GtkOverlay">
        <property name="visible">True</property>
        <property name="halign">fill</property>
        <property name="valign">fill</property>
        <property name="height-request">104</property>
        <child type="overlay">
          <object class="GtkEventBox" id="episode_row_button_box">
            <property name="visible">True</property>
            <property name="can_focus">False</property>
            <property name="halign">end</property>
            <property name="valign">center</property>
          </object>
        </child>
        <child>
          <object class="GtkButton" id="episode_row_expand_button">
            <property name="visible">True</property>
            <property name="halign">fill</property>
            <property name="relief">none</property>
            <property name="valign">fill</property>
            <property name="xalign">0</property>
            <child>
              <object class="GtkBox">
                <property name="visible">True</property>
                <property name="halign">fill</property>
                <property name="orientation">vertical</property>
                <child>
                  <object class="GtkLabel" id="episode_row_number_label">
                    <property name="visible">True</property>
                    <property name="halign">fill</property>
                    <property name="ellipsize">end</property>
                    <property name="xalign">0</property>
                    <style>
                      <class name="episode-row-number-label"/>
                    </style>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel" id="episode_row_name_label">
                    <property name="visible">True</property>
                    <property name="halign">fill</property>
                    <property name="ellipsize">end</property>
                    <property name="xalign">0</property>
                    <style>
                      <class name="episode-row-name-label"/>
                    </style>
                  </object>
                </child>
              </object>
            </child>
            <style>
              <class name="episode-row-expand-button"/>
            </style>
          </object>
        </child>
      </object>
    </child>
    <child>
      <object class="GtkRevealer" id="episode_row_revealer">
        <property name="visible">True</property>
        <child>
          <object class="GtkBox" id="episode_row_details_box">
            <property name="visible">True</property>
            <property name="halign">fill</property>
            <property name="orientation">vertical</property>
            <child>
              <object class="GtkLabel" id="episode_row_description_label">
                <property name="visible">True</property>
                <property name="width-request">100</property>
                <property name="halign">fill</property>
                <property name="wrap">True</property>
                <style>
                  <class name="episode-row-description-label"/>
                </style>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </object>
</interface>
